@model MyJewelryStore.Models.Order

@{
    ViewData["Title"] = "Twój koszyk";
}

<h2>Dostępne produkty</h2>
<table style="width: 100%; height: 100%">
    <tr>
        <td><img src=/(1).png alt="1" width="100%" , height="100%"></td>
        <td><img src=/(2).png alt="2" width="100%" , height="100%"></td>
        <td><img src=/(3).png alt="3" width="100%" , height="100%"></td>
        <td><img src=/(4).png alt="4" width="100%" , height="100%"></td>
        <td><img src=/(5).png alt="5" width="100%" , height="100%"></td>
    </tr>
    <tr>

        <td><img src=/(6).png alt="6" width="100%" , height="100%"></td></td>
        <td><img src=/(7).png alt="7" width="100%" , height="100%"></td></td>
        <td><img src=/(8).png alt="8" width="100%" , height="100%"></td></td>
        <td><img src=/(9).png alt="9" width="100%" , height="100%"></td></td>
        <td><img src=/(10).png alt="9" width="100%" , height="100%"></td></td>
    </tr>



</table><hr /><p></p>

<h2>Mój koszyk</h2>


<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                @Html.LabelFor(Model=>Model.Email, "Podaj swój e-mail", htmlAttributes: new { @class="control-label"})
                @Html.TextBoxFor(model => model.Email, new { @class = "form-control", @type = "email" })
                @Html.ValidationMessageFor(Model=>Model.Email,"",new { @class="text-danger"})

            </div>
            <div class="form-group">
                @Html.LabelFor(Model=>Model.NewProductId, "Wybierz produkt z listy", htmlAttributes: new { @class="control-label"})
                <select asp-for="NewProductId" class="form-control" asp-items="ViewBag.NewProductId"></select>

            </div>

            <div class="form-group">
                <input type="submit" value="Zamów" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Wróć do listy zamówień</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
